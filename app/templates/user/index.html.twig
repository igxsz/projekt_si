{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.user_list'|trans }}
{% endblock %}

{% block body %}
{#    {% if is_granted('ROLE_ADMIN') %}#}
    <h1>{{ 'title.user_list'|trans }}</h1>
    <nav class="nav">
        <a href="{{ url('task_index') }}" title="{{ 'action.back_to_list'|trans }}" class="nav-link">
            {{ 'action.back_to_list'|trans }}
        </a>


    </nav>
    {% if pagination is defined and pagination.items|length %}

        <table class="table table-striped align-middle">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'label.id'|trans, 'user.id') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.email'|trans, 'user.email') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.nick'|trans, 'user.nick') }}</th>

                <th>{{ 'label.actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for user in pagination.items %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.nick }}</td>

                    <td>

{#                        {% if is_granted('EDIT', category) %}#}
                            <a href="{{ url('user_edit', {'id': user.id}) }}" title="{{ 'action.edit'|trans }}" class="btn btn-outline-primary">
                                {{ 'action.edit'|trans }}
                            </a>
{#                        {% endif %}#}

{#                        {% if is_granted('DELETE', category) %}#}
                            <a href="{{ url('user_delete', {'id': user.id}) }}" title="{{ 'action.delete'|trans }}" class="btn btn-outline-danger">
                                {{ 'action.delete'|trans }}
                            </a>
{#                        {% endif %}#}

                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

    {% else %}
        <p>
            {{ 'message.empty_list'|trans }}
        </p>
    {% endif %}

{#    {% else %}#}
{#        <p>{{ 'Access denied'|trans }}</p>#}
{#    {% endif %}#}
{% endblock %}